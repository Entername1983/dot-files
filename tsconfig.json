{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "types": ["vite-plugin-svgr/client"],

    "paths": {
      "@source/*": ["*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@account/*": ["pages/Account/*"],
      "@blog/*": ["pages/Blog/*"],
      "@contact/*": ["pages/Contact/*"],
      "@dashboard/*": ["pages/Dashboard/*"],
      "@deck/*": ["pages/Deck/*"],
      "@decks/*": ["pages/Decks/*"],
      "@documentation/*": ["pages/Documentation/*"],
      "@extract/*": ["pages/Extract/*"],
      "@groups/*": ["pages/Groups/*"],
      "@landingpage/*": ["pages/LandingPage/*"],
      "@layouts/*": ["pages/layouts/*"],
      "@legal/*": ["pages/Legal/*"],
      "@main/*": ["pages/Main/*"],
      "@play/*": ["pages/Play/*"],
      "@quiz/*": ["pages/Quiz/*"],
      "@quizzes/*": ["pages/Quizzes/*"],
      "@study/*": ["pages/Study/*"],
      "@terms/*": ["pages/Terms/*"],
      "@upgrade/*": ["pages/Upgrade/*"],
      "@utils/*": ["lib/utils/*"],
      "@contexts/*": ["lib/contexts/*"],
      "@services/*": ["lib/services/*"],
      "@hooks/*": ["lib/hooks/*"],
      "@store/*": ["lib/store/*"],
      "@common/*": ["common/*"],
      "@customTypes/*": ["types/*"],
      "@routes/*": ["routes/*"],
      "@components/*": ["components/*"],
      "@client/*": ["client/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "vite.config.js",
    "tailwind.config.ts",
    "./svg.d.ts",
    "eslint.config.mjs"
  ],
  "exclude": ["node_modules"]
}
